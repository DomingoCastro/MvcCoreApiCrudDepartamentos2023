@model IEnumerable<MvcCoreApiCrudDepartamentos2023.Models.Departamentos>

@{
    List<string> localidades = ViewData["LOCALIDADES"] as List<string>;
}

<h1>Departamentos</h1>
<form method="post">
    <label>Seleccione una localidad</label>
    <select name="localidad" class="form-control">
        @foreach (string loc in localidades)
        {
            <option value="@loc">@loc</option>
        }
    </select>
    <button class="btn btn-outline-info">
        Buscar por localidad
    </button>
</form>
 <a asp-controller="Departamentos"
  asp-action="CreateDepartamento"
 class="btn btn-dark">
 Crear Dept
 </a>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
                <td>
                    <a asp-controller="Departamentos" asp-action="Details" asp-route-id="@item.IdDepartamento" class="btn btn-outline-info"> Detalles</a>
                    <a asp-controller="Departamentos" asp-action="UpdateDepartamento" asp-route-id="@item.IdDepartamento" class="btn btn-outline-success">Editar</a>
                    <a asp-controller="Departamentos" asp-action="DeleteDepartamento" asp-route-id="@item.IdDepartamento"class="btn btn-outline-danger">Eliminar</a>
                </td>
        </tr>
}
    </tbody>
</table>
