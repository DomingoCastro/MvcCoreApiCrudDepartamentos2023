@model IEnumerable<MvcCoreApiCrudDepartamentos2023.Models.Departamentos>

@{
    List<string> localidades = ViewData["LOCALIDADES"] as List<string>;
}

<h1>Departamentos</h1>
<form method="post">
    <label>Seleccione una localidad</label>
    <select name="localidad" class="form-control">
        @foreach (string loc in localidades)
        {
            <option value="@loc">@loc</option>
        }
    </select>
    <button class="btn btn-outline-info">
        Buscar por localidad
    </button>
</form>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
                <td>
                    <a asp-controller="Departamentos" asp-action="Details" asp-route-id="@item.IdDepartamento"> Detalles</a>
                </td>
        </tr>
}
    </tbody>
</table>
